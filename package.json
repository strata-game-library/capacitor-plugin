{
  "name": "@strata-game-library/capacitor-plugin",
  "version": "1.0.1",
  "description": "Cross-platform input, device detection, and haptics for Strata 3D games",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    }
  },
  "files": [
    "dist/",
    "android/",
    "ios/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "docgen": "docgen --api StrataPlugin --output-readme README.md",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "cd example && npm install && npm test"
  },
  "keywords": [
    "capacitor",
    "strata",
    "mobile",
    "input",
    "haptics",
    "gamepad",
    "touch",
    "device-detection",
    "cross-platform",
    "react-three-fiber"
  ],
  "author": "Jon Bogaty <jon@jonbogaty.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/strata-game-library/capacitor-plugin"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "dependencies": {
    "@capacitor/core": "^8.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/docgen": "0.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.3.0",
    "rimraf": "^6.1.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.0",
    "vitest": "^4.0.16"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}

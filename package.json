{
  "name": "@jbcom/strata-capacitor-plugin",
  "version": "0.0.1",
  "description": "Capacitor plugin for Strata 3D - cross-platform input, device detection, and haptics for mobile games",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "capacitor",
    "strata",
    "mobile",
    "input",
    "haptics"
  ],
  "author": "Jon Bogaty <jon@jonbogaty.com>",
  "license": "MIT",
  "files": [
    "dist/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jbcom/nodejs-strata-capacitor-plugin"
  },
  "peerDependencies": {
    "@jbcom/strata": ">=1.4.0",
    "react": ">=18.0.0"
  },
  "dependencies": {
    "@capacitor/core": "^8.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@capacitor/cli": "^8.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "rimraf": "^6.1.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.0",
    "vitest": "^4.0.16"
  }
}
